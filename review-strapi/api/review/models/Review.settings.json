{
  "connection": "default",
  "collectionName": "reviews",
  "info": {
    "name": "review",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "title": {
      "unique": true,
      "default": "",
      "required": true,
      "type": "string"
    },
    "subtitle": {
      "required": true,
      "type": "string"
    },
    "author": {
      "model": "author",
      "via": "reviews"
    },
    "body": {
      "type": "richtext"
    },
    "score": {
      "type": "decimal",
      "required": true
    },
    "ups": {
      "default": "up1.\nup2.\nup3.",
      "type": "text"
    },
    "downs": {
      "default": "down1.\ndown2.",
      "required": true,
      "type": "text"
    },
    "game": {
      "model": "game",
      "via": "reviews"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "featured": {
      "type": "boolean"
    },
    "movie": {
      "model": "movie",
      "via": "reviews"
    },
    "show": {
      "model": "show",
      "via": "reviews"
    }
  }
}